{
  "$schema": "https://raw.githubusercontent.com/LuaLS/lua-language-server/master/setting/schema.json",
  "settings": {
    "Lua": {
      "hint": {
        "enable": true,
        "arrayIndex": "Enable",
        "setType": true,
        "paramName": "All",
        "paramType": true,
        "semicolon": "SameLine",
        "compose": true
      },
      "completion": {
        "callSnippet": "Replace",
        "keywordSnippet": "Replace"
      },
      "diagnostics": {
        "globals": ["vim"]
      },
      "workspace": {
        "checkThirdParty": false
      }
    }
  }
} 